{
  "name": "sophia-ve/contao-hello-world-bundle",
  "type": "contao-bundle",
  "description": "Hello World for custom Contao 4 bundles",
  "homepage": "https://contao.org",
  "license": "LGPL-3.0-or-later",
  "authors": [{
    "name": "Sophia von Elbwart",
    "homepage": "https://github.com/sophia-ve"
  }],
  "require": {
    "php": "^5.6 || ^7.0",
    "contao/core-bundle": "4.4.*",
    "symfony/framework-bundle": "^3.3"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "friendsofphp/php-cs-fixer": "^2.12",
    "phpunit/phpunit": "^5.7.26",
    "symfony/phpunit-bridge": "^3.2"
  },
  "extra": {
    "contao-manager-plugin": "Sophiave\\ContaoHelloWorldBundle\\ContaoManager\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "Sophiave\\ContaoHelloWorldBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sophiave\\ContaoHelloWorldBundle\\Tests\\": "tests/"
    }
  },
  "support": {
    "issues": "https://github.com/sophia-ve/contao-hello-world-bundle/issues",
    "source": "https://github.com/sophia-ve/contao-hello-world-bundle"
  },
  "scripts": {
    "cs-fixer": [
      "vendor/bin/ecs check src/ tests/ --fix --ansi"
    ]
  }
}
